	function fbshare(albumuniqueid) {
		FB.ui({
			method: 'feed',
			app_id: '{Registry::get("config")->read("fb.app_id")}',
			link: 'http://facebook.com/roseland88',
			picture: '',
			name: '{$domain}/artist/album.php?artistid={$artistuniqueid}&albumid='+albumuniqueid
		},
		function(response){
			if(response && response.post_id) {
				var shareon	= 1;
				$.post("shareaction.php", { 'albumuniqueid':albumuniqueid,'shareon':shareon }, function(data) {});
			}
		});
	}
</script> 
